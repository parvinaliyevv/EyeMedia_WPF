<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <SolidColorBrush x:Key="BusinessColor" Color="#90B77D"/>

    <Style x:Key="BusinessButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedSecondaryDarkButton}">

        <Setter Property="Background" Value="{StaticResource BusinessColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusinessColor}"/>

    </Style>

    <Style x:Key="BusinessRepeatButton" TargetType="RepeatButton" BasedOn="{StaticResource MaterialDesignRaisedSecondaryDarkButton}">

        <Setter Property="Background" Value="{StaticResource BusinessColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BusinessColor}"/>

    </Style>

    <Style x:Key="BusinessCheckBox" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignFilterChipAccentOutlineCheckBox}">

        <Setter Property="Background" Value="{StaticResource BusinessColor}"/>
        <Setter Property="BorderBrush"  Value="{StaticResource BusinessColor}"/>

    </Style>

</ResourceDictionary>
    